@using TECH.Models
@model HomeModelView
@{
    ViewData["Title"] = "Home Page";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<style>
    .apexcharts-legend.apexcharts-align-center.position-bottom {
        display: none;
    }
</style>
<div class="page-heading">
    <h3>Trang thống kê</h3>
</div>
<div class="page-content">
    <section>
        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body px-3 py-4-5">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="stats-icon purple"><i class="iconly-boldPaper"></i></div>
                            </div>
                            <div class="col-md-8">
                                <h6 class="text-muted font-semibold">Tổng số phòng ban</h6>
                                <h6 class="font-extrabold mb-0">@Model.DepartmentCount</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body px-3 py-4-5">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="stats-icon blue"><i class="iconly-boldProfile"></i></div>
                            </div>
                            <div class="col-md-8">
                                <h6 class="text-muted font-semibold">Tổng số chức vụ</h6>
                                <h6 class="font-extrabold mb-0">@Model.PositionCount</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body px-3 py-4-5">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="stats-icon green"><i class="iconly-boldInfo-Circle"></i></div>
                            </div>
                            <div class="col-md-8">
                                <h6 class="text-muted font-semibold">Tổng số dự án</h6>
                                <h6 class="font-extrabold mb-0">@Model.ProjectCount</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body px-3 py-4-5">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="stats-icon red"><i class="iconly-boldBookmark"></i></div>
                            </div>
                            <div class="col-md-8">
                                <h6 class="text-muted font-semibold">Tổng số nhân Viên</h6>
                                <h6 class="font-extrabold mb-0">@Model.EmployeeCount</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-8">
                                <h4>Thống kê số lượng nhân viên phòng</h4>
                            </div>
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <table id="table1" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th width="5%">STT</th>
                                                <th width="15%">Phòng ban</th>
                                                <th width="15%">Chức vụ</th>
                                                <th width="10%">Tổng số nhân viên</th>
                                            </tr>
                                        </thead>
                                        <tbody id="tblData">
                                            @if (Model != null && Model.LstData != null && Model.LstData.Count > 0)
                                            {
                                                int i = 0;
                                                @foreach (var item in Model.LstData)
                                                {
                                                    i++;
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.Key</td>
                                                        @foreach (var itemPost in item.Value)
                                                        {
                                                            <td>@itemPost.PositionName</td>
                                                            <td>@itemPost.EmployeeCount</td>
                                                        }
                                                    </tr>
                                                }

                                            }
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <div id="chart"></div>
                        @*<canvas id="barChart"></canvas>*@
                        @*<div id="chartContainer" style="height: 370px; width: 100%;"></div>*@
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>

