 <style type="text/css">
    input.error {
        border-color: #f00 !important;
    }

    label.error {
        clear: both;
        color: #f00;
        display: block;
        text-align: left;
        margin: unset;
        padding: unset;
        font-size: 13px;
        font-weight: unset !important;
        background: unset;
    }
    .form-group[class*='has-icon-'] .form-control-icon{
        transform: unset !important;
        top: 10% !important;
    }
        .form-group[class*='has-icon-'].has-icon-left .form-control {
        padding-left: 1.0rem !important;
    }
      .modal-footer{
            border-top: unset !important;
      }
      .item-image{
        width: 150px;
        height: 100px;
        border-radius: 4px;
    }
    .box-image {
        width: 150px;
        height: 120px;
        background: url('/image-default/default.png');
        background-position: center;
        background-repeat: unset;
        background-size: cover;
        border-radius: 4px;
        margin-top: 10px;
        cursor: pointer;
        float: left;
        margin-right: 10px;
        /*display: none;*/
    }
  /*  .form-group[class*='has-icon-'].has-icon-left .form-control{
        padding-left: unset;
    }*/
    
</style>
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Quản lý nhân viên</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li aria-current="page" class="breadcrumb-item active">Quản lý nhân viên</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div  class="card">            
            <div  class="card-header">
                <div  class="row">
                    <div  class="col-md-6">Danh sách nhân viên</div>
                    <div  class="col-md-6">
                        <button type="button"  data-toggle="modal" data-target="#userModal" class="btn btn-primary btn-right btn-addorupdate" style="float:right">
                            <span style="display: flex;  align-items: center;"><i class="bi bi-plus-circle"></i> <span style="margin-left: 6px; padding-top: 2px;"> Tạo mới</span></span>
                        </button>
                    </div>
                </div>
            </div>
            <div  class="card-body">
                <div  class="row">
                    <div  class="col-md-3">
                        <div  class="between:flex bottom:margin-3 ml-2">
                            <div  class="center:flex-items">
                                <span  class="right:marign-1">Hiển thị</span>                            
                                <select id="ddlShowPage" style=" width: 33%; display: inline;" class="select form-select">
                                                    <option value="10" selected="selected">10</option>
                                                    <option value="20">20</option>
                                                    <option value="30">30</option>
                                                    <option value="50">50</option>
                                                </select>
                            </div>
                        </div>
                    </div>
                    <div  class="col-md-3">
                        <select  id="select-right-chu-vu" class="select form-select EmployeeCodeSelected">
                            <option  value="">Tất cả chức vụ</option>
                            <option  value="0">Quản trị viên</option>
                            <option  value="1">Nhân viên</option>
                        </select>
                    </div>
                     <div  class="col-md-3">
                        <select  id="select-right-tinh-trang" class="select form-select EmployeeCodeSelected">
                            <option  value="">Tình trạng</option>
                            <option  value="1">Đang làm</option>
                            <option  value="2">Nghỉ làm</option>
                        </select>
                    </div>
                    <div  class="col-md-3"><input  placeholder="Tìm kiếm..." type="text" class="form-control form-search"></div>
                </div>
                <div  class="table-responsive">
                    <table  id="table1" class="table table-striped">
                        <thead>
                            <tr>
                                <th width="5%">STT</th>
                                <th width="15%">Hình ảnh</th>
                                <th width="15%">Tên nhân viên</th>
                                <th width="10%">Mã NV</th>
                                <th width="15%">Ngày sinh</th>
                                @*<th width="10%">Giới tính</th>*@
                                <th width="10%">Chức vụ</th>
                                <th width="10%">Phòng ban</th>    
                                <th width="10%">Tình trạng</th>
                                <th style="text-align: center;" width="10%">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody id="tblData">                            
                        </tbody>
                    </table>
                </div>
                <nav  aria-label="...">                  

                      <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                                <ul id="paginationUL" class="float-right" style="justify-content: center"></ul>
                                            </div>
                </nav>
            </div>          
        </div>
    </section>
</div>

<partial name="AddOrUpdate" />

@section Scripts{
        <script src="~/admin/plugins/jquery-validation/jquery.validate.min.js"></script>
        <script src="~/admin/employee/employee.js?v=@DateTime.Now.Ticks"></script>
    }



